---
interface Props {
  class?: string;
  hover?: boolean;
}

const { class: className = '', hover = true } = Astro.props;

const baseClasses = 'glass rounded-2xl p-6 transition-all duration-300';
const hoverClasses = hover ? 'hover:scale-105 hover:shadow-2xl hover:shadow-primary-500/10 hover:border-primary-500/30' : '';
const classes = `${baseClasses} ${hoverClasses} ${className}`;
---

<div class={classes}>
  <slot />
</div>
